<main>
	<%- include('../partials/adminSidebar') %>
	
	<div id="main-wrapper">
		
		<div class="transparent-bg shadow-sm p-3">
			<span class="me-3" id="sidebar-toggler-btn"><i class="fas fa-bars"></i></span>
			<h5 class="m-0 color-theme d-inline-block">Dashboard</h5>
		</div>
		
		
		<div  class="d-flex gap-2 flex-wrap m-4 text-black">	
			
			
			<div class="bg-primary-transparent  rounded p-3" style="width: 300px; height: 50px;">
				<div class="fs-5">new donation requests = <%= numPendingDonations %>
			</div>
				
			
			</div>
			<div class="bg-primary-transparent  rounded p-3" style="width: 350px; height: 50px;">
				<div class="fs-5">donations not collected yet = <%= numAssignedDonations %>
			</div>
				
			</div>
			<div class="bg-primary-transparent  rounded p-3" style="width: 400px; height: 50px;">
				<div class="fs-5">donations to be assigned to agent = <%= numAcceptedDonations %>
			</div>

			
		</div>
		
		
		
		<div class="d-flex gap-3 flex-column flex-wrap m-4 text-black">

			
			<div class="bg-primary-transparent  rounded p-3" style="width: 250px; height: 50px;">
				<div class="fs-5">admins = <%= numAdmins %></div>
			</div>

			<div class="bg-primary-transparent  rounded p-3" style="width: 250px; height: 50px;">
				<div class="fs-5">donors = <%= numDonors %></div>
			</div>
			
			<div class="bg-primary-transparent  rounded p-3" style="width: 250px; height: 50px;">
				<div class="fs-5">agents = <%= numAgents %></div>
		    </div>
		    
			<div class="bg-primary-transparent  rounded p-3" style="width: 250px; height: 50px;">
			<div class="fs-5">donations collected = <%= numCollectedDonations %>
			</div>

			
		</div>

		
	</div>
</main>